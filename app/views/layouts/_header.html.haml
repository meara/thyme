%header.header
  %nav.navbar.is-spaced.margin-b-none
    .container
      .navbar-brand
        = link_to root_path, class: "navbar-item" do
          = image_tag("Thyme.png")
          %h1.title.is-dark-green.has-text-primary Thyme
      .navbar-menu.is-active
        .navbar-start
          =# link_to "Recipes",recipes_path, class: "navbar-item is-dark-green"
        .navbar-end
          - if user_signed_in?
            = link_to("Log out", destroy_user_session_path, class: "navbar-item", method: :delete)
          - else
            = link_to("Log in", new_user_session_path, class: "navbar-item")
            = link_to("Sign up", new_user_registration_path, class: "navbar-item")
